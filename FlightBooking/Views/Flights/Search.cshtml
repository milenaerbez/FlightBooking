@model IEnumerable<FlightBooking.Models.Flight>
@{
    ViewData["Title"] = "Search";
}
<h1>Search Flights</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Flights" asp-action="Search" method="get">
            <div class="form-group">
                <label for="departureLocation" class="control-label">Departure Location</label>
                <input type="text" class="form-control" id="departureLocation" name="departureLocation">
            </div>
            <div class="form-group">
                <label for="arrivalLocation" class="control-label">Arrival Location</label>
                <input type="text" class="form-control" id="arrivalLocation" name="arrivalLocation">
            </div>
            <div class="form-group">
                <input type="checkbox" id="includeTransfers" name="includeTransfers" value="true" />
                <label for="includeTransfers">Include flights with transfers</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <h2>Search Results</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Location</th>
                    <th>Arrival Location</th>
                    <th>Departure Time</th>
                    <th>Seats</th>
                    <th>Transfer</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.FlightNumber</td>
                        <td>@flight.DepartureLocation</td>
                        <td>@flight.ArrivalLocation</td>
                        <td>@flight.DepartureTime</td>
                        <td>@flight.Seats</td>
                        <td>@flight.Transfer</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



